<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Information\Entity\Db\InformationFichier" table="INFORMATION_FICHIER">
        <id name="id" type="integer" column="ID">
            <generator strategy="SEQUENCE"/>
        </id>

        <field name="nom"       column="NOM"          type="string"   length="256"    nullable="false"/>
        <field name="filename"  column="FILENAME"     type="string"   length="256"    nullable="false"/>

        <field name="dateCreation" type="datetime" column="CREATION" nullable="false"/>

        <many-to-one field="createur" target-entity="Application\Entity\Db\Utilisateur">
            <join-columns>
                <join-column name="CREATEUR" referenced-column-name="ID"/>
            </join-columns>
        </many-to-one>


    </entity>
</doctrine-mapping>
