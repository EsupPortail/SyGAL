<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\Entity\Db\RecapBu" table="RECAP_BU">
    <id name="id" type="integer" column="ID">
      <generator strategy="SEQUENCE"/>
    </id>

    <field name="orcid"       type="string" column="ORCID" length="19" nullable="true"/>
    <field name="nnt"         type="string" column="NNT" length="15" nullable="true"/>
    <field name="vigilance"   type="string" column="VIGILANCE" length="2048" nullable="true"/>

    <one-to-one field="these" target-entity="Application\Entity\Db\These">
      <join-columns>
        <join-column name="THESE_ID" referenced-column-name="ID"/>
      </join-columns>
    </one-to-one>


  </entity>
</doctrine-mapping>
