    function generateSelect($id, $roles)
    {
        $texte = '';
        $texte .= '<select name="' . $id . '" class="form-control" >';
        /** @var \Application\Entity\Db\Role $role */
        foreach ($roles as $role) {
            $texte .= '<option value="' . $role->getId() . '">' . $role->getLibelle() . '</option>';
        }
        $texte .= '</select>';
        return $texte;
    }
